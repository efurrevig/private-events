<%= form_with model: [current_user, current_user.events.build] do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :location %>
        <%= form.text_field :location %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>
    <div>
        <%= form.label :date %>
        <%= form.datetime_field :date %>
    </div>
    <div>
        <%= form.label :private %>
        <%= form.check_box :private %>
    <div>
        <%= form.submit %>
    </div>
<% end %>